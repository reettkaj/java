<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dog Names</title>
</head>
<body>

    <h1>Dice roller</h1>
    <p>Click the button below to roll the dice until you get the number 6.</p>

    <label for="dice-sides">Number of sides:</label>
    <input type="number" id="dice-sides" min="2" value="6">
    <button onclick="rollUntilMax()">Roll the dice</button>

    <h2>Dice results</h2>
    <ul id="dice-results"></ul>

    <script>
        function rollDice(sides) {
            return Math.floor(Math.random() * sides) +1;
            }

         function rollUntilMax() {
            const sides = parseInt(document.getElementById("dice-sides").value);


            if (isNaN(sides) || sides < 2) {
              alert ("The sides have to be minimum the number 2");
              return;
            }
              let diceResults = document.getElementById("dice-results");
            diceResults.innerHTML = "";

          let roll;
          do {
            roll = rollDice(sides);
            let li = document.createElement("li");
            li.textContent = `You rolled ${roll}`;
            diceResults.appendChild(li);
          } while (roll !== 6);
        }
    </script>
</body>
</html>
