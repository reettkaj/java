<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Dicerolls</title>
</head>
<body>
    <script>
    var dicecount = prompt('How many dice rolls?')
    var sum= 0

    for (var i = 0; i < dicecount; i++) {
            var roll = Math.floor(Math.random() * 6) + 1;
            sum += roll;
        }

        document.write("The sum of your dice rolls is: " + sum);

    </script>
</body>
</html>
