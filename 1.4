<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Lajitteluhattu</title>
</head>
<body>
 <h1>Elektroninen lajitteluhattu</h1>

    <label for="nimi">Syötä nimesi:</label>
    <input type="text" id="nimi" placeholder="Anna nimesi">

 <button onclick="lajittelehouse()">Lajittele minut!</button>

    <p id="tulos"></p>
    <script>
         function lajittelehouse() {
            var nimi = document.getElementById("nimi").value;

            var arpa = Math.floor(Math.random() * 4) + 1;

            var house;
            if (arpa === 1) {
                house = "Gryffindor";
            } else if (arpa === 2) {
                house = "Slytherin";
            } else if (arpa === 3) {
                house = "Hufflepuff";
            } else {
                house = "Ravenclaw";
            }

            document.getElementById("tulos").innerText = nimi + ", sinut on lajiteltu tupaan " + house + ".";
        }
    </script>
</body>
</html>
